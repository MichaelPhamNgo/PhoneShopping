@model Models.EF.Role

@{
    ViewBag.Title = "Create A New Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="/Assets/Admin/build/js/toastr.min.js"></script>
    <script>
        @if (ViewBag.CreateRoleErrorMessage != null)
        {
            <text>$(document).ready(function () { toastr.error('@ViewBag.CreateRoleErrorMessage'); });</text>
        }

        @if (ViewBag.CreateRoleSuccessMessage != null)
        {
            <text>$(document).ready(function () { toastr.success('@ViewBag.CreateRoleSuccessMessage'); });</text>
        }
    </script>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Role")">Role</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create A New Role</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                            Role Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control", @placeholder = "Role Name", @autofocus = "autofocus" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                            Role Description
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Role Description" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-primary" href="@Url.Action("Create","Role")">Reset</a>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                }
                <p>
                    @Html.ActionLink("Back To Role Index", "Index", "Role")
                </p>
            </div>
        </div>
    </div>
</div>

