@model PagedList.IPagedList<Models.EF.Role>
@using PagedList.Mvc


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="/Assets/Admin/build/js/toastr.min.js"></script>        
    <script>
        @if (TempData.ContainsKey("EditTagErrorMessage"))
        {
            <text>$(document).ready(function () { toastr.error('@TempData["EditRoleErrorMessage"]'); });</text>
        }
    </script>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Role")">Role</a></li>
        <li class="breadcrumb-item active" aria-current="page">Index</li>
    </ol>
</nav>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h2 style=" margin-top: 9px;">Role List</h2>
                    </div>
                    <div class="col-md-6 col-sm-6" style="text-align:right;">
                        <a href="@Url.Action("Create", "Role")" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a>
                    </div>
                </div>
            </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <div id="datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap no-footer">
                                    <div class="row">
                                        <div class="col-sm-4 form-group pull-right top_search">
                                            @using (Html.BeginForm("Index", "Role", FormMethod.Get, new { @class = "form-horizontal" }))
                                            {                                                
                                                <div class="input-group" style="margin-bottom:0px;">
                                                    <input type="text" name="searchString" class="form-control" placeholder="Search ..." value="@ViewBag.SearchName">
                                                    <span class="input-group-btn">
                                                        <button class="btn btn-default" type="submit">Go!</button>
                                                    </span>
                                                </div>                                                
                                            }
                                            </div>
                                        <div class="col-sm-8" style="text-align:right;margin-top:10px;">
                                            <a href="/Admin/Role?searchRoleName=@ViewBag.SearchName&searchPageSize=10">10</a> |
                                            <a href="/Admin/Role?searchRoleName=@ViewBag.SearchName&searchPageSize=20">20</a> |
                                            <a href="/Admin/Role?searchRoleName=@ViewBag.SearchName&searchPageSize=50">50</a> |
                                            <a href="/Admin/Role?searchRoleName=@ViewBag.SearchName&searchPageSize=100">100</a>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <table id="datatable" class="table table-striped table-bordered bulk_action dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="datatable_info">
                                                <thead>
                                                    <tr role="row">
                                                        <th style="text-align: center;padding-right: 12px;">
                                                            Role ID
                                                        </th>
                                                        <th rowspan="1" colspan="1" style="text-align:center;">
                                                            <a href="/Admin/Role?searchTagName=@ViewBag.SearchName&sorting=@ViewBag.Sorting&searchPageSize=@ViewBag.SearchRolePageSize">Role Name</a>
                                                        </th>
                                                        <th rowspan="1" colspan="1" style="text-align:center;">
                                                            Role Description
                                                        </th>
                                                        <th rowspan="1" colspan="1" style="text-align:center;">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr id="row_@item.Id">
                                                            <td style="text-align: center;">@item.Id</td>
                                                            <td style="text-align:center;">@item.Name</td>
                                                            <td style="text-align:center;">@item.Description</td>
                                                            <td style="text-align:center;">
                                                                <a href="/Admin/Role/Detail/@item.Id"><span class="glyphicon glyphicon-eye-open"></span> Detail</a> |
                                                                <a href="/Admin/Role/Edit/@item.Id"><span class="glyphicon glyphicon-edit"></span> Edit</a> |
                                                                <a data-ajax="true" data-ajax-complete="$('#row_@item.Id').remove()" data-ajax-confirm="Are you sure to change status of this tag" data-ajax-method="Delete" href="/Admin/Role/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                                                            </td>
                                                        </tr>
                                                    }

                                                    @if (ViewBag.TotalRoleDisplay != null && ViewBag.TotalRoleDisplay.Equals(0))
                                                    {
                                                        <tr style="text-align:center;">
                                                            <td colspan="4">There is no record</td>
                                                        </tr>
                                                    }

                                                    </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-5">
                                            <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                                                Showing @ViewBag.SearchRolePageDisplay to @ViewBag.SearchRolePageSizeDisplay of @ViewBag.TotalRoleDisplay entries
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                                                @Html.PagedListPager(Model, searchPage => Url.Action("Index", new
                                               {
                                                   searchPage,
                                                   searchName = ViewBag.SearchName,
                                                   searchPageSize = ViewBag.SearchRolePageSize
                                               }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
