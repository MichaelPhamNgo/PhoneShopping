@model PagedList.IPagedList<Models.ViewModel.TagModel>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts {    
    <script src="/Assets/Admin/build/js/toastr.min.js"></script>
    <script src="/Assets/Admin/build/js/controller/tagController.js"></script>    
    <script>
        @if (TempData.ContainsKey("EditTagErrorMessage"))
        {
            <text>$(document).ready(function () { toastr.error('@TempData["EditTagErrorMessage"]'); });</text>
        }        
    </script>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Tag")">Tag</a></li>
        <li class="breadcrumb-item active" aria-current="page">Index</li>
    </ol>
</nav>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h2 style=" margin-top: 9px;">Tag List</h2>
                    </div>
                    <div class="col-md-6 col-sm-6" style="text-align:right;">
                        <a href="@Url.Action("Create", "Tag")" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a>
                    </div>
                </div>    
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <div id="datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap no-footer">
                                <div class="row">
                                    <div class="col-sm-4 form-group pull-right top_search">
                                        @using (Html.BeginForm("Index", "Tag", FormMethod.Get, new { @class = "form-horizontal" }))
                                        {
                                            <div class="input-group" style="margin-bottom:0px;">
                                                <input type="text" name="searchString" class="form-control" placeholder="Search ..." value="@ViewBag.SearchString">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" type="submit">Go!</button>
                                                </span>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-sm-8" style="text-align:right;margin-top:10px;">
                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&searchPageSize=10">10</a> |
                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&searchPageSize=20">20</a> |
                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&searchPageSize=50">50</a> |
                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&searchPageSize=100">100</a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="datatable" class="table table-striped table-bordered bulk_action dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="datatable_info">
                                            <thead>
                                                <tr role="row">
                                                    <th style="text-align: center;padding-right: 12px;">
                                                        Tag ID
                                                    </th>
                                                    <th rowspan="1" colspan="1" style="text-align:center;">
                                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&sortByType=tagName&sorting=@ViewBag.Sorting&searchPageSize=@ViewBag.SearchTagPageSize">Tag Name</a>
                                                    </th>
                                                    <th rowspan="1" colspan="1" style="text-align:center;">
                                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&sortByType=creator&sorting=@ViewBag.Sorting&searchPageSize=@ViewBag.SearchTagPageSize">Creator</a>
                                                    </th>
                                                    <th rowspan="1" colspan="1" style="text-align:center;">
                                                        <a href="/Admin/Tag?searchName=@ViewBag.SearchName&sortByType=createdDate&sorting=@ViewBag.Sorting&searchPageSize=@ViewBag.SearchTagPageSize">Created Date</a>
                                                    </th>
                                                    <th rowspan="1" colspan="1" style="text-align:center;">
                                                        Status
                                                    </th>
                                                    <th rowspan="1" colspan="1" style="text-align:center;">Actions</th>
                                                </tr>                                                
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr id="row_@item.Id">
                                                        <td style="text-align: center;">@item.Id</td>
                                                        <td style="text-align:center;">@item.TagName</td>
                                                        <td style="text-align:center;">@item.Creator</td>
                                                        <td style="text-align:center;">@(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("MM/dd/yyyy HH:mm:ss") : "")</td>
                                                        <td style="text-align:center;"><a style="color:white" class="change-status btn btn-sm @(item.Status.Equals("Processing") ? "btn-info" : "btn-danger")" data-id="@item.Id">@item.Status</a></td>
                                                        <td style="text-align:center;">
                                                            <a href="/Admin/Tag/Detail/@item.Id" class="btn btn-sm btn-primary btn-grant"><i class="fa fa-eye-slash"></i></a>
                                                            <a href="/Admin/Tag/Edit/@item.Id" class="btn btn-sm btn-info btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                                                            <a data-ajax="true" data-ajax-complete="$('#row_@item.Id').remove()" data-ajax-confirm="Are you sure to change status of this tag" data-ajax-method="Delete" href="/Admin/Tag/Delete/@item.Id" class="btn btn-sm btn-danger btn-delete"><i class="fa fa-trash-o"></i></a>

                                                        </td>
                                                    </tr>
                                                }

                                                @if (ViewBag.TotalTagDisplay != null && ViewBag.TotalTagDisplay.Equals(0))
                                                {
                                                    <tr style="text-align:center;">
                                                        <td colspan="6">There is no record</td>
                                                    </tr>
                                                }
                                            </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-5">
                                            <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                                                Showing @ViewBag.SearchTagPageDisplay to @ViewBag.SearchTagPageSizeDisplay of @ViewBag.TotalTagDisplay entries
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                                                @Html.PagedListPager(Model, searchPage => Url.Action("Index", new
                                                {
                                                    searchPage,
                                                    searchName = ViewBag.SearchName,                                                                                
                                                    searchPageSize = ViewBag.SearchTagPageSize
                                                }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>